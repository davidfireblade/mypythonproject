pipeline {
    agent any
    environment {
        APPLICATION_NAME = 'mypythonproject'
        GIT_REPO="https://github.com/davidfireblade/mypythonproject.git"
    }
    stages {
        stage('create') {
            steps {
                script {
                    openshift.withCluster() {
                        openshift.withProject() {
                            // create a new application from the templatePath
                            openshift.newApp('https://github.com/davidfireblade/mypythonproject.git')
                        }
                    }
                } // script
            } // steps
        } // stage
        stage('Build') {
            steps {
                script {
                    openshift.withCluster() {
                        openshift.withProject() {
                            def builds = openshift.selector("bc", ${APPLICATION_NAME}).related('builds')
                            builds.untilEach(1) {
                                return (it.object().status.phase == "Complete")
                            }
                        }
                    }
                } // script
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh('''python --version;''')
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                script {
                    openshift.withCluster() {
                        openshift.withProject() {
                            def rm = openshift.selector("dc", ${APPLICATION_NAME}).rollout()
                            timeout(5) { 
                                openshift.selector("dc", ${APPLICATION_NAME}).related('pods').untilEach(1) {
                                    return (it.object().status.phase == "Running")
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}